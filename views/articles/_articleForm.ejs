<div class="form-group">
  <label for="title">Title</label>
  <input
    required
    value="<%= article.title %>"
    type="text"
    name="title"
    id="title"
    class="form-control"
  />
</div>
<div class="form-group">
  <label for="description">Description</label>
  <textarea rows="4" name="description" id="description" class="form-control">
<%= article.description %></textarea
  >
</div>
<div class="form-group">
  <label for="markdownText">Text</label>
  <textarea
    rows="15"
    required
    name="markdownText"
    id="markdownText"
    class="form-control"
  >
<%= article.markdownText %></textarea
  >
</div>
